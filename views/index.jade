doctype html
html(lang="en")
  head
    title Twiliopera - Record

    // We use Twitter Bootstrap as the default styling for our page
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    .container
      h1 Twiliopera
      p.
        Enter your phone number and receieve a call which you can turn into a song.

      // phone number
      .row
        .col-md-4
        .col-md-4.text-center
          form(id='numberForm', role='form')
            .form-group
              input.form-control(type='text', id='phoneNumber', 
                placeholder='5555555555')
            button(type='submit', class='btn btn-danger') Call Me!
        .col-md-4
      .row
        .col-md-4
        .col-md-4.text-center
          img(src='/images/midi.png')
        .col-md-4

    // Include page dependencies
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    // Our app's front-end JavaScript logic
    script(src='/app.js')
